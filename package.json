{
  "name": "weatherwidget",
  "productName": "Glass Weather",
  "version": "1.0.0",
  "description": "A beautiful glass-style weather widget built with Electron.",
  "author": {
    "name": "Mohammed Hamarash",
    "email": "mohammed_hamarashi@hotmail.com"
  },
  "license": "MIT",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish"
  },
  "keywords": [],
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1"
  },
  "devDependencies": {
    "electron": "37.2.6",
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-dmg": "^7.8.3",
    "@electron-forge/maker-zip": "^7.8.3",
    "@electron-forge/maker-squirrel": "^7.8.3",
    "@electron-forge/maker-deb": "^7.8.3",
    "@electron-forge/maker-rpm": "^7.8.3"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-dmg",
          "platforms": ["darwin"],
          "config": {
            "format": "ULFO"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": ["darwin"]
        },
        {
          "name": "@electron-forge/maker-squirrel",
          "platforms": ["win32"]
        },
        {
          "name": "@electron-forge/maker-deb",
          "platforms": ["linux"]
        },
        {
          "name": "@electron-forge/maker-rpm",
          "platforms": ["linux"]
        }
      ]
    }
  }
}